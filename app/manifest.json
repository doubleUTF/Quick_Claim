{
  "manifest_version":2,
  "name": "Quick Claim",
  "version": "0.2",
  "content_scripts":[
    {
      "matches":[
        "<all_urls>"
      ],
      "js":[
        "vendor/jquery-3.1.0.min.js",
        "js/content.js"
      ]
    }
  ],
  "permissions":[
    "tabs"
  ],
  "browser_action":{
    "default_icon":"img/icon16.png",
    "default_title":"Quick Claim",
    "default_popup":"popup/popup.html"
  },

  "background":{
    "scripts":["js/background.js"],
    "persistent":false
  },

  "commands":{
    "_execute_browser_action":{
      "suggested_key":{
        "default":"Ctrl+Q"
      }
    }
  },

  "icons":{
    "16":"img/icon16.png",
    "48":"img/icon48.png",
    "128":"img/icon128.png"
  }
}
